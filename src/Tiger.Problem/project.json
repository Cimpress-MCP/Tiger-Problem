{
  "version": "1.0.0-*",
  "name": "Tiger.Problem",
  "title": "Tiger Problem",
  "description": "An implementation of an RFC-7807–compliant API Problem object.",
  "language": "en-US",
  "authors": [ "cosborn@cimpress.com" ],
  "copyright": "Copyright ©Cimpress 2017",

  "buildOptions": {
    "debugType": "portable",
    "xmlDoc": true,
    "warningsAsErrors": true,
    "define": [ "TRACE" ],
    "additionalArguments": [
      "/ruleset:../../Tiger.ruleset",
      "/additionalfile:../../stylecop.json"
    ]
  },
  "configurations": {
    "Debug": {
      "buildOptions": {
        "define": [ "DEBUG" ]
      }
    },
    "Release": {
      "buildOptions": {
        "define": [ "RELEASE" ],
        "optimize": true
      }
    }
  },

  "dependencies": {
    "Swashbuckle.AspNetCore.SwaggerGen": "1.0.0-rc1",

    "StyleCop.Analyzers": {
      "type": "build",
      "version": "1.0.0"
    }
  },

  "frameworks": {
    "netstandard1.6": {
      "dependencies": {
        "NETStandard.Library": "1.6.1"
      }
    }
  },

  "packOptions": {
    "releaseNotes": "Everything is new!",
    "owners": [ "cosborn@cimpress.com" ],
    "repository": {
      "type": "git",
      "url": "https://mcpstash.cimpress.net/projects/TIGER/repos/problem"
    },
    "requireLicenseAcceptance": false,
    "tags": [ "api", "problem", "rfc7807", "error", "response" ],
    "iconUrl": "https://mcpstash.cimpress.net/projects/TIGER/repos/problem/browse/tiger_logo.png?raw"
  }
}
